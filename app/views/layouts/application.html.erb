    <nav class="navbar navbar-expand-lg navbar-light border-black border-bottom p-4">
      <div class="container">
        <a class="navbar-brand" href = "/"><h2>ふくシティ</h2></a>
          <ul class="navbar-nav">
            <%= render "layouts/header" %>
          </ul>
      </div>
    </nav>
  </header>
  <main class="mb-5">
    <%= yield %>
  </main>
  <footer class="border-top pt-5"></footer>
 </body>
</html>
