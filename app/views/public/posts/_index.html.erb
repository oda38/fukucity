 
    
<% posts.each do |post| %>
  <div class=”card-deck“>
    <div class="card" style="width: 16rem;">
        <%= link_to post_path(post.id) do %>
          <%= image_tag post.image, size: "40x80", class:"card-img-top"; %>
        <% end %>
      <div class="card-body">
        <div class="row">
          <div class="col-2">    
            <% if current_user.profile_image.attached? %>
              <%= image_tag current_user.profile_image, size: "50x50", class:"mt-3 rounded-circle"; %>
            <% else %>
              <%= image_tag 'no_image_irasutoya', size: "50x50", class:"mt-3 rounded-circle"; %>
            <% end %>
          </div>  
          <div class="col-10">
            <p class="card-title">  
              <%= link_to(post_path(post.id), class:"text-dark") do %>
               <strong><span><%= post.title.truncate(10) %></span></strong>
              <% end %>
            </p>
            <p class="card-text"><%= post.content.truncate(20) %></p>
            <span><i class="fas fa-heart"></i><%= post.favorites.count %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

 

