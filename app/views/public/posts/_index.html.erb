 
<table class="table table-striped"> 
  <% posts.each do |post| %>
        <tr>
          <td><%= link_to post_path(post.id) do %>
                <% if post.image.attached? %>
                  <%= image_tag post.image, size: "80x80" %>
                <% else %>
                  <%= image_tag 'no_image_irasutoya', size: "80x80" %>
                <% end %>
            
               <strong><%= post.title.truncate(10) %></strong>
              <% end %>
          </td> 
          <td><% if post.user.profile_image.attached? %>
               <%= image_tag post.user.profile_image, size: "50x50", class:"mt-3 rounded-circle"; %>
              <% else %>
               <%= image_tag 'no_image_irasutoya', size: "50x50", class:"mt-3 rounded-circle"; %>
              <% end %>
          </td>
          <td><span><i class="fas fa-heart"></i><%= post.favorites.count %></span></td>    
        </tr>
  <% end %>
</table> 
