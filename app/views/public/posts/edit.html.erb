<div class='container'>

  <div class="row mt-3">
    <div class="col-lg-3">
      <h4 class="m-3" >編集ページ</h4>
    </div>
  </div>
  
  
  
    <%= form_with model:@post do |f| %>
    　   <div class="form-group">
          <label class="text-secondary">タイトル</label><br>
          <%= f.text_field :title, :size=>"60" %>
          <font color="red"><%= render "layouts/error_messages", model: @post, attribute: :title %></font>
        </div>
        
    　   <div class="form-group">
          <label class="text-secondary">メイン画像</label><br>
          <%= f.file_field :image, accept: "image/*" %>
          <font color="red"><%= render "layouts/error_messages", model: @post, attribute: :image %></font>
        </div>
        
        <div class="form-group">
          <label class="text-secondary">追加画像※4枚まで追加できます。</label><br>
          <%= f.file_field :addition_images, multiple: true, accept: "image/*" %>
          <font color="red"><%= render "layouts/error_messages", model: @post, attribute: :addition_images %></font>
        </div>
    　 
        <div class="form-group">
          <label class="text-secondary">投稿内容</label><br>
          <%= f.text_area :content, class: 'form-control',size: "20x10" %>
          <font color="red"><%= render "layouts/error_messages", model: @post, attribute: :content %></font>
        </div>
          
        <div class="form-group">
          <label class="text-secondary">タグ (,で区切ると複数タグ登録できます)</label><br>
          <%= f.text_field :name, value: @tag_list, class:"form-control"%>
        </div>
      
     
        <div class="d-flex justify-content-end m-5">
          <% if @post.is_draft == true %>
           <div class="p-2">
            <%= f.submit "下書きを公開", :name => 'publicize_draft', class:'mr-5 btn btn-sm btn-warning text-light' %>
           </div>
           <div class="p-2">
            <%= f.submit "下書きを更新", :name => 'update_draft', class:'mr-5 btn btn-sm btn-outline-secondary' %>
           </div>
          <% else %>
           <div class="p-2">
            <%= link_to "この投稿を削除する", post_path(@post), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に削除しますか？" %>
           </div>
           <div class="p-2">
            <%= f.submit "投稿を更新", :name => 'update_post', class:'btn btn-sm btn-warning text-light' %>
           </div>
          <% end %>
        </div>
    
    <% end %>
  
</div>