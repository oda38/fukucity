<table class="table mt-3"> 
  <% post.comments.each do |comment| %>
    <tr>
      <td>
        <% if comment.user.profile_image.attached? %>
         <%= image_tag comment.user.profile_image, size: "50x50", class:"mt-3 rounded-circle"; %>
        <% else %>
         <%= image_tag 'no_image_irasutoya', size: "50x50", class:"mt-3 rounded-circle"; %>
        <% end %>
      </td>
      <td>
        <div class="d-flex flex-column">
          <div>
            <%= comment.user.nickname %>
            <small><%= comment.created_at.strftime('%Y/%m/%d') %></small>
          </div>
          <div>
            <%= comment.comment %>
          </div>
        </div>
      </td>
      <% if comment.user == current_user %>
      <td>
        <%= link_to "コメント削除", post_comment_path(comment.post.id, comment.id), method: :delete, 
          class: "btn btn-sm btn-outline-danger", "data-confirm" => "本当に削除しますか？" %>
      </td>
      <% end %>
    </tr>    
  <% end %>
</table> 
  