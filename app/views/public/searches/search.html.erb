<div class="container">
  
  <div class="row mt-5">
    <h5>検索結果</h5>
  </div>
  <div class="row m-2">
   <div class="col-md-8">
    <table class="table table-striped table-light table-hover mt-3">
      <% if @range == "ユーザー名" %>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
               <% if user.profile_image.attached? %>
                <%= image_tag user.profile_image, size: "50x50" %>
               <% else %>
                <%= image_tag 'no_image_irasutoya', size: "50x50" %>
               <% end %>
              </td>
              <td><%= user.nickname %></td>
              <td>
               <div class="text-right">
                <%= link_to user_path(user.id), class: 'mr-5 btn btn-sm btn-outline-secondary' do %>
                  <i class="fa-solid fa-arrow-up-right-from-square">&nbsp;このユーザーの投稿を見る</i><% end %>
               </div>
              </td>
            </tr>
          <% end %>
          <% if @users.count == 0 %>
            <p>該当するユーザーは0件です。</p>
          <% end %>
        </tbody>
      <% else %>
        <tbody>
          <%= render 'public/posts/index', posts: @posts %>
          <% if @posts.count == 0 %>
            <p>該当する投稿は0件です。</p>
          <% end %>
        </tbody>
      <% end %>
    </table>
   </div>
  </div>
  
</div>