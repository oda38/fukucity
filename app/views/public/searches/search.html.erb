<div class="container">
  
  <div class="row mt-5">
    <h5>検索結果</h5>
  </div>

<table class="table table-hover table-inverse">
  <% if @range == "ユーザー名" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.nickname %></td>
        </tr>
      <% end %>
      <% if @users.count == 0 %>
        <p>該当するユーザーは0件です。</p>
      <% end %>
    </tbody>
  <% else %>
    <tbody>
      <%= render 'public/posts/index', posts: @posts %>
      <% if @posts.count == 0 %>
        <p>該当する投稿は0件です。</p>
      <% end %>
    </tbody>
  <% end %>
</table>