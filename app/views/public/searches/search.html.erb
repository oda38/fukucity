<h2>検索結果</h2>

<table class="table table-hover table-inverse">
  <% if @range == "ユーザー名" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.nickname %></td>
        </tr>
      <% end %>
      <% if @users.count == 0 %>
        <p>該当するユーザーは0件です。</p>
      <% end %>
    </tbody>
  <% else %>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
        </tr>
      <% end %>
      <% if @posts.count == 0 %>
        <p>該当する投稿は0件です。</p>
      <% end %>
    </tbody>
  <% end %>
</table>