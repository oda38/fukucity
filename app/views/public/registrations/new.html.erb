<div class="container">
  
 <div class="row">
   <div class="col-md-5">
    <h2 class="m-5">新規会員登録</h2>
   </div>
 </div> 
  
 <div class="row">
  <div class="device-error mx-auto">
    <%= render "public/shared/error_messages", resource: resource %>
   </div>
 </div> 
    
 <div class="row">
  <div class="col-md-7 mx-auto"> 
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
 
     <table class="table table-borderless">
        <tr>
          <td><%= f.label :名前（フルネーム） %></td>
          <td><%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "令和道子" %></td>
        </tr>
        <tr>
          <td><%= f.label :名前（カナ全角） %></td>
          <td><%= f.text_field :name_kana, autofocus: true, autocomplete: "name_kana", placeholder: "レイワミチコ" %></td>
        </tr>
        <tr>
          <td><%= f.label :ニックネーム %></td>
          <td><%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %></td>
        </tr>
        <tr>
          <td><%= f.label :メールアドレス %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td><%= f.label :電話番号 %>※ハイフンなし</td>
          <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder: "1111111111" %></td>
        </tr>
        <tr>
          <td><%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字以上)</em>
                <% end %>
          </td>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td><%= f.label :password_confirmation %></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
      </table>
     
    <div class="actions m-5">
      <%= f.submit "会員登録する" %>
    </div>
    
   <% end %>

   <%= render "public/shared/links" %>
  </div>
 </div> 
</div>